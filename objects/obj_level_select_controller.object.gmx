        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// Movement.

 // Exit the level select screen.
    if(keyboard_check_pressed(vk_button_b) || keyboard_check_pressed(global.dip_button_b))
    {
       if(instance_exists(obj_fade_to) == false)
       {
          with(instance_create(0, 0, obj_fade_to))
          {
               fade_to = rm_menu;
          }
       }
    }
    
 // Change stage / act index.
    if(keyboard_check_pressed(vk_right))
    {
       {
          if(lvlselect_zone != lvlselect_zone_end)
          {
             lvlselect_zone += 1;
          }
          else
          {
             lvlselect_zone  = 1;
          }        
       }
    }
    if(keyboard_check_pressed(vk_left))
    {
       {
          if(lvlselect_zone != 1)
          {
             lvlselect_zone -= 1;
          }
          else
          {
             lvlselect_zone  = lvlselect_zone_end;
          }       
       }
    }    
    
 // Play stage.
    if(keyboard_check_pressed(ord("A")) || keyboard_check_pressed(vk_enter) || keyboard_check_pressed(global.dip_button_a) || keyboard_check_pressed(vk_enter))
    {  
       if(instance_exists(obj_fade_to) == false)
       {
          with(instance_create(0, 0, obj_fade_to))
          {
               fade_to = save_zonelist_select(other.lvlselect_zone);
          }
       }       
    }

</string>
